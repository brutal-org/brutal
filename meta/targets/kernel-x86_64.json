{
    "id": "kernel-x86_64",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "x86_64",
        "bits": "64",
        "sys": "kernel",
        "abi": "sysv",
        "loader": "brutal-loader",
        "encoding": "utf8",
        "freestanding": true,
        "host": false
    },
    "tools": {
        "cc": {
            "cmd": [
                "@latest",
                "clang"
            ],
            "args": [
                "-target",
                "x86_64-elf","-nostdlibinc", "-Isrc/libs/libc", "-Isrc/libs/libc-math",
                "-ffreestanding",
                "-fno-stack-protector",
                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow", "-D__brutal__", "-D__kernel__", "-D__x86_64__",
                "-mno-sse",
                "-mno-sse2",
                "-mno-red-zone",
                "-mcmodel=kernel",
                "-fbuiltin",  
                "-nostdlib", 
                "-nostdlib++",
                "-D__freestanding__"
            ]
        },
        "cxx": {
            "cmd": [
                "@latest",
                "clang++"
            ],
            "args": [
                "-target",
                "x86_64-elf","-nostdlibinc", "-Isrc/libs/libc", "-Isrc/libs/libc-math",
                "-ffreestanding",
                "-fno-stack-protector",
                "-mno-80387",
                "-mno-mmx", "-D__brutal__", "-D__kernel__", "-D__x86_64__",
                "-mno-3dnow",
                "-mno-sse",
                "-mno-sse2",
                "-mno-red-zone",
                "-mcmodel=kernel",
                "-fbuiltin",  
                "-nostdlib", 
                "-nostdlib++",
                "-D__freestanding__"
            ]
        },
        "ld": {
            "cmd": [
                "@latest",
                "ld.lld"
            ],
            "args": [
                "-m",
                "elf_x86_64",
                "-Tmeta/targets/kernel-x86_64.ld",
                "-z",
                "max-page-size=0x1000",
                "-nostdlib"
            ],
            "files": [
                "meta/targets/kernel-x86_64.ld"
            ]
        },
        "ar": {
            "cmd": [
                "@latest",
                "llvm-ar"
            ],
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": "nasm",
            "args": [
                "-f elf64"
            ]
        }
    }
}